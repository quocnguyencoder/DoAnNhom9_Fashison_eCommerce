@model Fashison_eCommerce.Models.User

@{
    Layout = null;
}



<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Edit Brand</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<!-- Modal body -->
<div class="modal-body">
    <form action="../Users/Edit" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="addEmail">ID :</label>
            <input type="email" id="addEmail" class="form-control bg-gray-300" name="idBrand" value="@ViewBag.brand.BrandID" readonly>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="addName">Name :</label>
            <input type="text" id="addName" class="form-control" name="Name" value="@ViewBag.brand.BrandName">
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </form>
</div>
