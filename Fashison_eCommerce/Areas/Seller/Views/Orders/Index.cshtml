@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}
<header>
<style>
    /* Style the tab */
    .tab {
        overflow: hidden;
    }

    /* Style the buttons inside the tab */
    .tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 10px 12px;
        transition: 0.3s;
        font-size: 17px;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        color: #AA3E27;
    }

    /* Create an active/current tablink class */
    .tab button.active {
        font-weight: bold;
        color: #AA3E27;
        border-bottom: solid 1px #AA3E27;
    }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        -webkit-animation: fadeEffect 1s;
        animation: fadeEffect 1s;
    }

    #datepicker{
    width:180px; 
    margin: 0 20px 20px 20px;
    }

    #datepicker > span:hover {
        cursor: pointer;
    }
    
    @* @-webkit-keyframes fadeEffect {
        from {opacity: 0;}
        to {opacity: 1;}
    }

    @keyframes fadeEffect {
        from {opacity: 0;}
        to {opacity: 1;}
    } *@

    /* style div content */
    .order-list{
        position: relative;
        margin: 0 auto;
        width: 1104px;
    }
    </style>
</header>

<div class="content-wrapper">
    <div class="tab">
        <button class="tablinks" onclick="openTabcontrol(event, 'all')">Tất cả</button>
        <button class="tablinks" onclick="openTabcontrol(event, 'confirm')">Chờ xác nhận</button>
        <button class="tablinks" onclick="openTabcontrol(event, 'receive')">Chờ lấy hàng</button>
        <button class="tablinks" onclick="openTabcontrol(event, 'deliver')">Đang giao</button>
        <button class="tablinks" onclick="openTabcontrol(event, 'delivered')">Đã giao</button>
        <button class="tablinks" onclick="openTabcontrol(event, 'cancel')">Đơn hủy</button>
    </div>
    <div>
        <div class="row" style="margin-top: 10px;">
            <!-- Topbar Search -->
            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" method = "post" action = "./Search">
                <div class="input-group">
                    <input name="search" />
                </div>
                <input type="submit" value="Search"/>
            </form>
            <div class="order-export">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group pmd-textfield pmd-textfield-floating-label">
                            <label>Ngày bắt đầu: </label>
                            <input type="datetime-local" id="datepicker" name="datepicker">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="all" class="tabcontent">
        @RenderPage("TabAll.cshtml")
    </div>

    <div id="confirm" class="tabcontent">
        @RenderPage("TabConfirm.cshtml")
    </div>

    <div id="receive" class="tabcontent">
        @RenderPage("TabReceive.cshtml")
    </div>

    <div id="deliver" class="tabcontent">
        @RenderPage("TabDeliver.cshtml")
    </div>

    <div id="delivered" class="tabcontent">
        @RenderPage("TabDelivered.cshtml")
    </div>

    <div id="cancel" class="tabcontent">
        @RenderPage("TabCancel.cshtml")
    </div>


    <script>
        function openTabcontrol(evt, tabControl) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(tabControl).style.display = "block";
            evt.currentTarget.className += " active";
        }
        $(document).ready(function () {
            $('#datepicker').datepicker();
        });
    </script>
    <!-- Script -->
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</div>