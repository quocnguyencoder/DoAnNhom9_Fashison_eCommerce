@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}
<header>
    <style>
        .heading {
            font-size: 19px;
            font-weight: 300;
            margin: 20px 0px 0px;
            display: flex;
        }

        .created-date {
            display: flex;
            align-items: flex-end;
            flex-direction: column;
            margin-bottom: 10px;
        }

        .content {
            margin: 20px;
        }

        .sub-content {
            display: flex;
            flex-direction: column;
            height: 80%;
            background-color: white;
        }

        tfoot {
            vertical-align: middle;
            border-color: inherit;
        }

        #Table-OrderDetail {
            margin: 20px;
            background-color: white;
        }

        .borderless td, .borderless th {
            border: none;
        }
    </style>
</header>
<div class="container-fluid">
    <div class="heading">
        <span>Chi tiết đơn hàng</span>
        <span> #373968775 - <b>Trạng thái</b></span>
    </div>
    <div class="created-date">
        <span>Ngày đặt hàng <i>26/02/2000</i></span>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card h-100">
                <div class="card-header">THÔNG TIN NGƯỜI NHẬN</div>
                <div class="card-body">
                    <h5 class="card-title">Chung Thiên Nhi</h5>
                    <p class="font-weight-light">Địa chỉ: 34/7 đường 16, Linh chiểu, Thủ Đức, TPHCM</p>
                    <p class="font-weight-lighter font-italic">Điện thoại: 0582010199</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card h-100">
                <div class="card-header">GIAO HÀNG</div>
                <div class="card-body">
                    <p class="font-weight-light">Ngày giao hàng</p>
                    <p class="font-weight-lighter">Miễn phí vận chuyển</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card h-100">
                <div class="card-header">THANH TOÁN</div>
