<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kênh bán hàng</title>
    <!-- Custom fonts for this template -->
    <link href="~/Assets/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
        
    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Import Bootstrap and JQuery -->
    <link rel="stylesheet"
          href="~/Assets/Admin/css/sb-admin-2.min.css">
    <script src="~/Assets/Admin/js/sb-admin-2.min.js">
    </script>
    <script src="~/Assets/Admin/vendor/jquery/jquery.min.js">
    </script>
    <!-- DataTables -->
    <link rel="stylesheet"
          type="text/css" href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.css">
    <script type="text/javascript"
            charset="utf8" src="~/Assets/Admin/vendor/datatables/jquery.dataTables.js">
    </script>
    
    <!-- My CSS and JQuery -->
    <script src="~/Assets/Seller/index.js"></script>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        @RenderPage("_Sidebar.cshtml")
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                @RenderPage("_Header.cshtml")
                <!-- Begin Page Content -->
                <div style="min-width: 966px; max-width: 1122px; padding: 0 48px; margin: 42px auto; display: flex;">
                    @RenderBody()
                    
                </div>

                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            @RenderPage("_Footer.cshtml")
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>
    @RenderSection("jsFooter", required: false)
</body>
</html>