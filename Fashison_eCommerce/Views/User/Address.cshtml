@model Fashison_eCommerce.ViewModel.AddressViewModel
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="~/UserScripts/AddressSubmitCreate.js"></script>

@{Html.RenderPartial("Sidebar", "User");}
<div id="address"><button type="button" class="btn btn-info btn" style="float:right;" data-toggle="modal" data-target="#create-modal">Thêm địa chỉ</button></div>
<div id="create-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">×</a>
                <h3>Thêm địa chỉ mới</h3>
            </div>
            <form id="createForm" name="address" role="form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Họ và tên</label>
                        @Html.EditorFor(model => model.address.full_name, new { htmlAttributes = new { @class = "form-control", @id = "name" } })
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        @Html.EditorFor(model => model.address.phone, new { htmlAttributes = new { @class = "form-control", @id = "phone" } })
                    </div>
                    <div class="form-group">
                        <label for="address">Địa chỉ</label>
                        @Html.EditorFor(model => model.address.address1, new { htmlAttributes = new { @class = "form-control", @id = "Address" } })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Trở lại</button>
                    <input type="submit" class="btn btn-info" id="createForm" value="Hoàn thành">
                </div>
            </form>
        </div>
    </div>
</div>
<div style=" float: right; background-color: white; height: 100%; max-height: 900px; max-width: 850px; width: 100%;">
    <div style="width: 800px!important; max-height: 30px; display: contents; margin-left: 5px; margin-bottom: 10px;">
        <h4 style="margin-left: 5px;">My address</h4>
    </div>
    @Html.Partial("PartialAddress");
</div>

